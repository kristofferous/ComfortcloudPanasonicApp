{
  "id": "set_mode",
  "title": {
    "en": "Set thermostat mode"
  },
  "titleFormatted": {
    "en": "Set [[device]] mode to [[mode]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=panasonic-ac"
    },
    {
      "name": "mode",
      "type": "dropdown",
      "values": [
        {
          "id": "auto",
          "title": {
            "en": "Auto"
          }
        },
        {
          "id": "cool",
          "title": {
            "en": "Cool"
          }
        },
        {
          "id": "heat",
          "title": {
            "en": "Heat"
          }
        },
        {
          "id": "dry",
          "title": {
            "en": "Dry"
          }
        },
        {
          "id": "fan",
          "title": {
            "en": "Fan"
          }
        }
      ]
    }
  ]
}
