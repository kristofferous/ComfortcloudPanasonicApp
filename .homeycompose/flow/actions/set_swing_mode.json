{
  "id": "set_swing_mode",
  "title": {
    "en": "Set swing mode"
  },
  "titleFormatted": {
    "en": "Set the selected device's swing mode to [[mode]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=panasonic-ac",
      "title": {
        "en": "Device"
      }
    },
    {
      "name": "mode",
      "type": "dropdown",
      "values": [
        {
          "id": "off",
          "title": {
            "en": "Off"
          }
        },
        {
          "id": "vertical",
          "title": {
            "en": "Vertical"
          }
        },
        {
          "id": "horizontal",
          "title": {
            "en": "Horizontal"
          }
        },
        {
          "id": "both",
          "title": {
            "en": "Vertical & horizontal"
          }
        }
      ]
    }
  ]
}
